// Problem 1: Division object
// Create the divide functionality in the following object
// the divide function will return a new array with the nums
// divided by the divideBy property.
// Look into the map function to help :)
const divider = {
    nums: [100, 200, 300, 400, 500],
    divideBy: 10,
    // create divide function here
    divide() {
        doIt = () => {
            for(let i = 0; i < this.nums.length; i++) {
                this.nums[i] /= this.divideBy;
            }
        }
      }        
};

// Problem 2: Design your own Animal base class and Dog sub class
class Animal {
constructor (name, pet, legs, fly ) {
    this.pet = pet;
    this.legs = legs;
    this.fly = fly;
}

greeting() {
    console.log("This is an animal!");
}

get name(){
    return ${this.name};
}

set name(change){
    const names = change.trim();
    this.name = names;
}
}/*END OF ANIMAL CLASS*/

