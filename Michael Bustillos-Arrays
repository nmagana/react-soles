/* Exercise 1: Array Practice
In this exercise, you will be practice using array methods. */

const arr = ["USC", "UCLA",  "UCI", "SDSU", "CSUN", "UCSD"]

// Step 1: Remove the first element in the array
arr.shift();

// Step 2: Sort the array in alphabetical order based on the last character in each string
arr.sort( function(a,b) {
    if (a[a.length-1] > b[b.length-1])
    {return 1;}
    else if (a[a.length-1] < b[b.length-1])
    {return -1;}
    
    return 0; /*if they equal each other*/
});

// Step 3: Generate an array with schools that have UC in them
let UC = [];

arr.forEach( function(school) {
    if(school.includes('UC'))
        {UC.push(school);}
};
